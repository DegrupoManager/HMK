    <div class="col-12 col-sm-12 col-md-12 col-lg-12 mb-3">
        <div class="card mb-3" style="z-index: 1;">
            <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                RESULTADOS
            </div>
            <div class="card-body align-items-center fw-light">
                <div class="container-fluid">
                    <!-- BEGIN table -->
                    <table id="datatableConsulta" class="table table-hover text-nowrap w-100">
                        <thead>
                            <tr id="cabecera">
                                <th class="border-top-0 pt-0 pb-2 text-sm">Nro de orden</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Código de Cliente</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Nombre de Cliente</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Fecha</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Hora</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Vendedor</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Estado</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Status</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Comentario</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Sub total</th>
                                <th class="border-top-0 pt-0 pb-2 text-sm">Total</th>
