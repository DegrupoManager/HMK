@{
    var orderData = ViewBag.OrderData;
}

<div id="orderData" data-order='@Html.Raw(orderData)'></div>

<div class="d-flex align-items-center mb-3">
    <div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Ingreso/OrderDraft">Ingreso</a></li>
            <li class="breadcrumb-item active">Orden de venta</li>
        </ul>
        <h1 class="page-header mb-0">Orden @ViewBag.OrderId</h1>
    </div>
</div>
<div class="row">
    <div class="col-4 ms-auto ps-auto d-flex justify-content-end">
        <button type="button" class="btn btn-icon text-theme editarOrden" style="" data-id="@ViewBag.OrderId">
            <i class="fa-solid fa-pen-to-square"></i>
            <span>Editar</span>
        </button>
        <button type="button" class="btn btn-icon text-theme duplicarOrden" style="" data-id="@ViewBag.OrderId">
            <i class="fa-regular fa-copy"></i>
            <span>Duplicar</span>
        </button>
        <button type="button" class="btn btn-icon text-theme" style="" data-id="@ViewBag.OrderId">
            <i class="fa-solid fa-print"></i>
            <span>Imprimir</span>
        </button>
    </div>
</div>

