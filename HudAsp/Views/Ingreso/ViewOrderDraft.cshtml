<form id="formNewOrderDraft" action="../Controllers/IngresoController.cs" method="POST" name="formNewOrderDraft">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="card mb-3">
                <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                    DATOS DEL CLIENTE
                </div>
                <div class="card-body align-items-center fw-light">
                    <div class="row gx-3">
                        <div class="col-12 col-sm-12 col-mb-7 col-lg-7">
                            <div class="row gx-3 mb-2">
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                    <label for="viewCodigoCliente" class="form-label" style="font-size: 12px">Código de Cliente</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                                        <input id="viewCodigoCliente" name="viewCodigoCliente" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                    <label for="viewNombreCliente" class="form-label" style="font-size: 12px">Nombre de Cliente</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                                        <input id="viewNombreCliente" name="viewNombreCliente" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                    <label for="viewPersonaContacto" class="form-label" style="font-size: 12px">Persona de contacto</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                                        <input id="viewPersonaContacto" name="viewPersonaContacto" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="row gx-3">
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                    <label for="viewNumeroReferencia" class="form-label" style="font-size: 12px">Número de referencia</label>
                                    <div class="input-group mb-3 w-auto">
                                        <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                                        <input id="viewNumeroReferencia" name="viewNumeroReferencia" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                    </div>
                                    <div class="row g-2">
                                        <div class="col-7">
                                            <label for="viewSerieDoc" class="form-label" style="font-size: 12px">Serie de doc.</label>
                                            <div class="input-group mb-3">
                                                <select id="viewSerieDoc" name="inputSerieDoc" class="form-select custom-select bg-inverse bg-opacity-10" disabled>
                                                    
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-5">
                                            <label for="viewCorrelativo" class="form-label" style="font-size: 12px">Correlativo</label>
                                            <div class="input-group mb-3">
                                                <input id="viewCorrelativo" name="viewCorrelativo" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                    <label for="viewDireccionDestino" class="form-label" style="font-size: 12px">Dirección destino</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fa-solid fa-chevron-down"></i></span>
                                        <input id="viewDireccionDestino" name="viewDireccionDestino" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                    </div>
                                    <textarea class="form-control bg-inverse bg-opacity-10" id="textAreaDireccionDestino" rows="3" style="resize: none;" disabled></textarea>
                                </div>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                    <label for="viewDestinatarioFactura" class="form-label" style="font-size: 12px">Destinatario de factura</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-chevron-down"></i></span>
                                        <input id="viewtDestinatarioFactura" name="viewDestinatarioFactura" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                    </div>
                                    <textarea class="form-control bg-inverse bg-opacity-10" id="textAreaDestinatarioFactura" rows="3" style="resize: none;" disabled></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-2 px-3">
                            <div class="row g-2 mb-2">
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                    <label for="viewFechaContabilizacion" class="form-label" style="font-size: 12px">Fecha de Contabilización</label>
                                    <div class="input-group text-end mb-2">
                                        <span class="input-group-text"><i class="fa-regular fa-calendar"></i></span>
                                        <input type="text" class="form-control bg-inverse bg-opacity-10" id="viewFechaContabilizacion" name="viewFechaContabilizacion" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-2 mb-2">
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                    <label for="viewFechaEntrega" class="form-label" style="font-size: 12px">Fecha de Entrega</label>
                                    <div class="input-group text-end mb-2">
                                        <span class="input-group-text"><i class="fa-regular fa-calendar"></i></span>
                                        <input type="text" class="form-control bg-inverse bg-opacity-10" id="viewFechaEntrega" name="viewFechaEntrega" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-2">
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                    <label for="viewFechaDocumento" class="form-label" style="font-size: 12px">Fecha de Documento</label>
                                    <div class="input-group text-end mb-2">
                                        <span class="input-group-text" id="basic-addon1"><i class="fa-regular fa-calendar"></i></span>
                                        <input type="text" class="form-control bg-inverse bg-opacity-10" id="viewFechaDocumento" name="viewFechaDocumento" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                            <div class="row gx-4">
                                <div class="col-12 col-sm-4 col-md-4 col-lg-4 text-end">
                                    <label for="viewMoneda" class="form-label" style="font-size: 12px">Moneda</label>
                                    <div class="input-group mb-3 text-end">
                                        <input id="viewMoneda" name="viewMoneda" type="text" class="form-control bg-inverse bg-opacity-10" style="font-size: 12px" disabled>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-8 col-md-8 col-lg-8 text-end">
                                    <label for="viewCondicionPago" class="form-label" style="font-size: 12px">Condición de Pago</label>
                                    <div class="input-group mb-3">
                                        <input id="viewCondicionPago" name="viewCondicionPago" type="text" class="form-control bg-inverse bg-opacity-10" style="font-size: 12px" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-2 mb-2">
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                    <label for="textAreaComentario" class="form-label" style="font-size: 12px">Comentario</label>
                                    <textarea class="form-control bg-inverse bg-opacity-10" style="resize: none;" id="textAreaComentario" name="textAreaComentario" rows="5" disabled></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-arrow">
                    <div class="card-arrow-top-left"></div>
                    <div class="card-arrow-top-right"></div>
                    <div class="card-arrow-bottom-left"></div>
                    <div class="card-arrow-bottom-right"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-10 col-lg-101-custom mb-3">
            <div class="card">
                <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                    DETALLE
                    <div class="ms-auto">
                        <a href="#" class="text-inverse text-opacity-75 text-decoration-none">
                            <i class="fa fa-download fa-fw me-1 text-theme"></i>
                            <span id="exportCSV">
                                 Exportar
                            </span>
                        </a>
                    </div>
                </div>

                <div class="card-body align-items-center fw-light p-2">
                    <div class="container-fluid">
                        <table id="datatableNewOrderDraft" class="table table-hover text-nowrap">
                            <thead>
                                <tr id="cabecera">
                                    <th class="border-top-0 pt-0 px-3 text-center">Artículo</th>
                                    @*<th class="border-top-0 pt-0 px-2 text-wrap">
                                    <span class="d-inline-block">Código</span>
                                    <span class="d-inline-block">del Artículo</span>
                                    </th>*@
                                    <th class="border-top-0 pt-0 text-center" style="padding-left: 6rem; padding-right: 6rem;">Descripción de Artículo</th>
                                    <th class="border-top-0 pt-0 px-3 text-center">Cantidad</th>
                                    <th class="border-top-0 pt-0 px-4 text-center">Descuento</th>
                                    <th class="border-top-0 pt-0 px-3 text-center">Almacén</th>
                                    <th class="border-top-0 pt-0 px-2 text-center">Cant. ALM</th>
                                    <th class="border-top-0 pt-0 px-2 text-center">Stock</th>
                                    <th class="border-top-0 pt-0 px-4 text-center">Precio</th>
                                    <th class="border-top-0 pt-0 px-5 text-center">IGV</th>
                                    <th class="border-top-0 pt-0 px-4 text-center">Código de barras</th>
                                </tr>
                            </thead>
                            <tbody id="detalleRow">
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-arrow">
                    <div class="card-arrow-top-left"></div>
                    <div class="card-arrow-top-right"></div>
                    <div class="card-arrow-bottom-left"></div>
                    <div class="card-arrow-bottom-right"></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-2 col-lg-202-custom mb-1">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-6 col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                            ADICIONALES
                        </div>

                        <div class="card-body align-items-center fw-light p-4">
                            <!--Transferencia gratuita-->
                            <label for="viewTransGrat" class="form-label" style="font-size: 12px">Transferencia gratuita</label>
                            <div class="input-group mb-3">
                                <select id="viewTransGrat" name="viewTransGrat" class="form-select custom-select bg-inverse bg-opacity-10" disabled>
                                    @*<option selected></option>*@
                                </select>
                            </div>
                            <!--Consignacion-->
                            <label for="viewConsignacion" class="form-label" style="font-size: 12px">Consignación</label>
                            <div class="input-group mb-3">
                                <select id="viewConsignacion" name="viewConsignacion" class="form-select custom-select bg-inverse bg-opacity-10" disabled>
                                    @*<option selected></option>*@
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="inputNumeroOrdenCompra" class="form-label" style="font-size: 12px">Numero de orden de compra</label>
                                <input id="inputNumeroOrdenCompra" name="inputNumeroOrdenCompra" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                            </div>

                        </div>

                        <div class="card-arrow">
                            <div class="card-arrow-top-left"></div>
                            <div class="card-arrow-top-right"></div>
                            <div class="card-arrow-bottom-left"></div>
                            <div class="card-arrow-bottom-right"></div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-12">
                    <div class="card mb-4">
                        <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                            RESUMEN
                        </div>

                        <div class="card-body align-items-center fw-light p-4">
                            <label for="inputTotal" class="form-label" style="font-size: 12px">Total</label>
                            <input id="inputTotal" name="inputTotal" type="text" class="form-control text-end mb-3 bg-inverse bg-opacity-10" disabled>

                            <label for="inputImpuestos" class="form-label" style="font-size: 12px">Impuestos</label>
                            <input id="inputImpuestos" name="inputImpuestos" type="text" class="form-control text-end mb-3 bg-inverse bg-opacity-10" disabled>

                            <label for="inputTotalDocumento" class="form-label" style="font-size: 12px">Total Documento</label>
                            <input id="inputTotalDocumento" name="inputTotalDocumento" type="text" class="form-control text-end mb-3 bg-inverse bg-opacity-10" disabled>
                        </div>

                        <div class="card-arrow">
                            <div class="card-arrow-top-left"></div>
                            <div class="card-arrow-top-right"></div>
                            <div class="card-arrow-bottom-left"></div>
                            <div class="card-arrow-bottom-right"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

