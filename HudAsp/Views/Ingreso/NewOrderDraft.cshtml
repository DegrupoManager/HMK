<form id="formNewOrderDraft" name="formNewOrderDraft">
<div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card mb-3">
            <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                DATOS DEL CLIENTE
            </div>
            <div class="card-body align-items-center fw-light">
                <div class="row gx-3">
                    <div class="col-12 col-sm-12 col-mb-7 col-lg-7">
                        <div class="row gx-3 mb-2">
                            <div class="col-12 col-sm-6 col-md-4 col-lg-4" style="width: 28%;">
                                <div class="typeahead__container">
                                    <label class="form-label" style="font-size: 12px">Código de Cliente</label>
                                    <div class="typeahead__field">
                                        <div class="typeahead__query input-group">
                                            <span id="porCodigoCliente" class="input-group-text"><i class="fa fa-search"></i></span>
                                            <input type="text" data-codPriceList="" class="form-control" name="inputCodigoCliente[query]" id="inputCodigoCliente" autocomplete="off" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-md-4 col-lg-4" style="width: 38%;">
                                <div class="typeahead__container">
                                    <label class="form-label" style="font-size: 12px">Nombre de Cliente</label>
                                    <div class="typeahead__field">
                                        <div class="typeahead__query input-group">
                                            <span id="porNombreCliente" class="input-group-text"><i class="fa fa-search"></i></span>
                                            <input type="text" class="form-control" name="inputNombreCliente[query]" id="inputNombreCliente" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                    <label for="inputPersonaContacto" class="form-label" style="font-size: 12px">Persona de contacto</label>
                                <div class="input-group mb-3">
                                    <select id="inputPersonaContacto" name="inputPersonaContacto" class="form-select custom-select">
                                        @*<option selected></option>*@
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row gx-3">
                            <div class="col-12 col-sm-6 col-md-4 col-lg-4" style="width: 28%;">
                                <div class="container-fluid px-0 mx-0 mb-3">
                                    <label for="inputNumeroReferencia" class="form-label" style="font-size: 12px">Número de referencia</label>
                                    <div class="container-fluid px-0 mx-0 nowrap">
                                        <div class="input-group" sytle="flex-wrap: nowrap;">
                                            <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                                            <input id="inputNumeroReferencia" name="inputNumeroReferencia" type="text" class="form-control w-75" autocomplete="off"  required>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row g-2">
                                    <div class="col-6">
                                        <label for="inputSerieDoc" class="form-label" style="font-size: 12px">Serie de doc.</label>
                                        <div class="input-group mb-3">
                                            <select id="inputSerieDoc" name="inputSerieDoc" class="form-select custom-select" required>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label for="inputCorrelativo" class="form-label" style="font-size: 12px">Correlativo</label>
                                        <div class="input-group mb-3">
                                            <input id="inputCorrelativo" name="inputCorrelativo" type="text" class="form-control bg-inverse bg-opacity-10" disabled>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-md-4 col-lg-4"  style="width: 38%;">
                                <label for="inputDireccionDestino" class="form-label" style="font-size: 12px">Dirección destino</label>
                                <div class="input-group mb-3">
                                    <select id="inputDireccionDestino" name="inputDireccionDestino" class="form-select custom-select" required>
                                        @*<option selected></option>*@
                                    </select>
                                </div>
                                <textarea class="form-control bg-inverse bg-opacity-10" id="textAreaDireccionDestino" rows="3" style="resize: none;" disabled></textarea>
                            </div>
                            <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                                <label for="inputDestinatarioFactura" class="form-label" style="font-size: 12px">Destinatario de factura</label>
                                <div class="input-group mb-3">
                                    <select id="inputDestinatarioFactura" name="inputDestinatarioFactura" class="form-select custom-select">
                                        @*<option selected></option>*@
                                    </select>
                                </div>
                                <textarea class="form-control bg-inverse bg-opacity-10" id="textAreaDestinatarioFactura" rows="3" style="resize: none;" disabled></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-2 px-3">
                        <div class="row g-2 mb-2">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12" >
                                <label for="inputFechaContabilizacion" class="form-label" style="font-size: 12px">Fecha de Contabilización</label>
                                <div class="input-group text-end mb-2">
                                    <span class="input-group-text"><i class="fa-regular fa-calendar"></i></span>
                                    <input type="text" class="form-control" id="datepicker-default" name="inputFechaContabilizacion" autocomplete="off" placeholder="dd/mm/yyyy" required>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2 mb-2">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <label for="inputFechaEntrega" class="form-label" style="font-size: 12px">Fecha de Entrega</label>
                                <div class="input-group text-end mb-2">
                                    <span class="input-group-text"><i class="fa-regular fa-calendar"></i></span>
                                    <input type="text" class="form-control" id="datepicker-range" name="inputFechaEntrega" autocomplete="off" placeholder="dd/mm/yyyy" required>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <label for="inputFechaDocumento" class="form-label" style="font-size: 12px">Fecha de Documento</label>
                                <div class="input-group text-end mb-2">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa-regular fa-calendar"></i></span>
                                    <input type="text" class="form-control" id="datepicker-inline" name="inputFechaDocumento" autocomplete="off" placeholder="dd/mm/yyyy" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-3">
                        <div class="row gx-4">
                            <div class="col-12 col-sm-4 col-md-4 col-lg-4 text-end">
                                <label for="inputMoneda" class="form-label" style="font-size: 12px">Moneda</label>
                                <div class="input-group mb-3 text-end">
                                    <input id="inputMoneda" name="inputMoneda" type="text" class="form-control bg-inverse bg-opacity-10" style="font-size: 12px" disabled>
                                </div>
                            </div>
                            <div class="col-12 col-sm-8 col-md-8 col-lg-8 text-end">
                                <label for="inputCondicionPago" class="form-label" style="font-size: 12px">Condición de Pago</label>
                                <div class="input-group mb-3">
                                    <input id="inputCondicionPago" name="inputCondicionPago" type="text" class="form-control bg-inverse bg-opacity-10" style="font-size: 12px" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2 mb-2">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                <label for="textAreaComentario" class="form-label" style="font-size: 12px">Comentario</label>
                                <textarea class="form-control" style="resize: none;" id="textAreaComentario" name="textAreaComentario" autocomplete="off" rows="5"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-arrow">
                <div class="card-arrow-top-left"></div>
                <div class="card-arrow-top-right"></div>
                <div class="card-arrow-bottom-left"></div>
                <div class="card-arrow-bottom-right"></div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 mb-3">
        <div class="card" style="z-index: 1;">
            <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                DETALLE
            </div>

            <div class="card-body align-items-center fw-light p-2">
                <div class="container-fluid">
 
                    <table id="datatableNewOrderDraft" class="table table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th class="border-top-0 pt-0 px-2"></th>
                                <th class="border-top-0 pt-0 px-3">Código de Artículo</th>
                                @*<th class="border-top-0 pt-0 px-2 text-wrap">
                                    <span class="d-inline-block">Código</span>
                                    <span class="d-inline-block">del Artículo</span>
                                </th>*@
                                <th class="border-top-0 pt-0" style="padding-left: 6rem; padding-right: 6rem;">Descripción de Artículo</th>
                                <th class="border-top-0 pt-0 px-3">Código de almacén</th>
                                <th class="border-top-0 pt-0 px-2">Cant. Almacén</th>
                                <th class="border-top-0 pt-0 px-2">Stock General</th>
