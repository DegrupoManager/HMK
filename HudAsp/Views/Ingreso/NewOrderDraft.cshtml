                            </tr>
                        </thead>
                        <tbody id="detalleRow">
                        </tbody>
                    </table>
                </div>        
            </div>

            <div class="card-arrow">
                <div class="card-arrow-top-left"></div>
                <div class="card-arrow-top-right"></div>
                <div class="card-arrow-bottom-left"></div>
                <div class="card-arrow-bottom-right"></div>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-12 col-md-12 col-lg-2 mb-1">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-6 col-lg-12">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                        ADICIONALES
                    </div>

                    <div class="card-body align-items-center fw-light p-4">
                        <label for="inputTransferenciaGratuita" class="form-label" style="font-size: 12px">Transferencia gratuita</label>
                        <div class="input-group mb-3">
                            <select id="inputTransferenciaGratuita" name="inputTransferenciaGratuita" class="form-select custom-select">
                                <option value="" selected></option>
                            </select>
                        </div>
                        <label for="inputConsignacion" class="form-label" style="font-size: 12px">Consignación</label>
                        <div class="input-group mb-3">
                            <select id="inputConsignacion" name="inputConsignacion" class="form-select custom-select">
                                <option value="" selected></option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="inputNumeroOrdenCompra" class="form-label" style="font-size: 12px">Numero de orden de compra</label>
                            <input id="inputNumeroOrdenCompra" name="inputNumeroOrdenCompra" type="text" class="form-control" autocomplete="off">
                        </div>
                    </div>

                    <div class="card-arrow">
                        <div class="card-arrow-top-left"></div>
                        <div class="card-arrow-top-right"></div>
                        <div class="card-arrow-bottom-left"></div>
                        <div class="card-arrow-bottom-right"></div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-12">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center bg-inverse bg-opacity-10 fw-light">
                        RESUMEN
                    </div>

                    <div class="card-body align-items-center fw-light p-4">
                        <label for="inputTotal" class="form-label" style="font-size: 12px">Total</label>
                            <input id="inputTotal" name="inputTotal" type="text" class="form-control mb-3 bg-inverse text-end bg-opacity-10" disabled>

                        <label for="inputImpuestos" class="form-label" style="font-size: 12px">Impuestos</label>
                            <input id="inputImpuestos" name="inputImpuestos" type="text" class="form-control mb-3 bg-inverse text-end bg-opacity-10" disabled>

                        <label for="inputTotalDocumento" class="form-label" style="font-size: 12px">Total Documento</label>
                        <input id="inputTotalDocumento" name="inputTotalDocumento" type="text" class="form-control text-end mb-3 bg-inverse bg-opacity-10" disabled>
                    </div>

                    <div class="card-arrow">
                        <div class="card-arrow-top-left"></div>
                        <div class="card-arrow-top-right"></div>
                        <div class="card-arrow-bottom-left"></div>
                        <div class="card-arrow-bottom-right"></div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-12 align-items-center text-center">
                <button type="submit" id="btnGrabar" class="btn btn-danger px-4">Grabar</button>
                <a href="/Ingreso/OrderDraft" class="btn btn-outline-theme px-3">
                    <span class="text-dark">Cancelar</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 gx-4 ms-auto">
            @*<button type="submit" id="btnGrabar" class="btn btn-danger px-4">Grabar</button>
            <a href="/Ingreso/OrderDraft" class="btn btn-outline-theme px-3">
                <span class="text-dark">Cancelar</span>
            </a>*@

