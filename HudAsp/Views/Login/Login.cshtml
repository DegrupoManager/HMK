@{
	ViewData["Title"] = "Login";
	ViewData["BodyClass"] = "pace-top";
	ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
	ViewData["AppHeaderNone"] = true;
	ViewData["AppSidebarNone"] = true;
	ViewData["AppContentNone"] = true;
}

@section scripts{

	<script>

		$(document).ready(function () {
			$('#usuario').val('');
			$('#contraseña').val('');

			function hideErrorMessage() {
				$(".alert").slideUp("slow", function () {
					$(this).remove();
				});
			}

			if ($(".alert").length > 0) {
				setTimeout(hideErrorMessage, 5000);
			}

		});


	</script>

}

<!-- BEGIN login -->
<div class="login">
	<!-- BEGIN login-content -->
	<div class="login-content">

		<form method="POST" name="login_form">
			@*@Html.ValidationSummary()*@
			<div class="d-flex justify-content-center">
				<img src="~/img/logo/logo-Hallmark.png" width="80%" height="auto" />
			</div>
			&nbsp
			<h1 class="text-center ">Iniciar Sesión</h1>

			@if (!ViewData.ModelState.IsValid)
			{
				<div class="alert alert-danger mt-3 pt-2 d-flex align-items-center">
					<ul class="text-center">
						@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
						{
							<li class="pt-2">@error.ErrorMessage</li>
						}
					</ul>
				</div>
			}


			&nbsp
			<div class="mb-3">
				<label for="usuario" class="form-label">Usuario <span class="text-danger">*</span></label>
				<input type="text" id="usuario" name="usuario" class="form-control form-control-lg bg-inverse bg-opacity-5" value="" autocomplete="off" placeholder="" required>
			</div>
			<div class="mb-3">
				<div class="d-flex">
					<label class="form-label">Contraseña <span class="text-danger">*</span></label>
				</div>
				<input type="password" id="contraseña" name="contraseña" class="form-control form-control-lg bg-inverse bg-opacity-5" autocomplete="off" value="" placeholder="" required>
			</div>
			@*<div class="mb-3">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" value="" id="customCheck1">
					<label class="form-check-label" for="customCheck1">Remember me</label>
				</div>
			</div>*@
			&nbsp
			<button type="submit" class="btn btn-outline-theme btn-lg d-block w-100 fw-500 mb-3">Iniciar Sesión</button>
		</form>
	</div>
	<!-- END login-content -->
</div>
<!-- END login -->
